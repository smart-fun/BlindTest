<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/authenticate_spotify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Authenticate Spotify"/>

    <Button
        android:id="@+id/connect_spotify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect Spotify"/>

    <Button
        android:id="@+id/get_user_spotify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Spotify User"/>

    <Button
        android:id="@+id/get_playlists_spotify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Spotify Playlists"/>
</LinearLayout>