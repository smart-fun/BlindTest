<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/redMore"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/red_team"
                android:textSize="42sp" />

            <TextView
                android:id="@+id/redLess"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/red_team"
                android:textSize="42sp" />

        </LinearLayout>


        <fr.arnaudguyon.blindtest.tools.Led8x8View
            android:id="@+id/redLeds"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/redScore"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="40dp"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/red_team"
            android:textSize="60sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/yellowScore"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/yellow_team"
            android:textSize="60sp"
            android:textStyle="bold" />

        <fr.arnaudguyon.blindtest.tools.Led8x8View
            android:id="@+id/yellowLeds"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/yellowMore"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/yellow_team"
                android:textSize="42sp" />

            <TextView
                android:id="@+id/yellowLess"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/yellow_team"
                android:textSize="42sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lines="3"
        android:padding="10dp"
        android:text="@string/notice_welcome"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/startGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/start_button" />


    <ImageView
        android:id="@+id/picture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        tools:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/singer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="Singer or group" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="Title of the song" />

        <TextView
            android:id="@+id/songsLeft"
            android:layout_width="wrap_content"
            android:text="0 left"
            android:layout_gravity="center_horizontal"
            android:textColor="#FF666666"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/answerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/wrong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="@string/wrong_answer" />

        <Button
            android:id="@+id/correct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="@string/correct_answer" />
        s
    </LinearLayout>


    <LinearLayout
        android:id="@+id/playBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="invisible"
        tools:visibility="visible">

        <ImageButton
            android:id="@+id/play"
            style="@style/PlayButtons"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/play_background"
            android:src="@drawable/ic_play" />

        <ImageButton
            android:id="@+id/pause"
            style="@style/PlayButtons"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/play_background"
            android:src="@drawable/ic_pause"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/resume"
            style="@style/PlayButtons"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/play_background"
            android:src="@drawable/ic_play"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/next"
            style="@style/PlayButtons"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/play_background"
            android:src="@drawable/ic_next" />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <fr.arnaudguyon.blindtest.tools.Led8x8View
        android:id="@+id/teamPressIcon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:background="#07000000"
        android:visibility="gone"
        tools:visibility="visible" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>